{
  "name": "@vunix/vue-tailwind-plugin",
  "version": "1.0.0",
  "description": "Vue tailwind plugin for vunix content injection",
  "author": "Gaetan SENN",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "build": "unbuild",
    "changelog": "standard-version"
  },
  "devDependencies": {
    "unbuild": "^1.1.2",
    "tailwindcss": "^3.3.0"
  },
  "standard-version": {
    "skip": {
      "bump": true,
      "commit": true,
      "tag": true
    }
  }
}
